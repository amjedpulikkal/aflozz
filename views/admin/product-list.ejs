<script>
    function get() {
        localStorage.setItem("toaster", JSON.stringify({ icon: 1, message: "Product status has been changed successfully" }))

    }
    function updateStatus(id,status) {
        fetch(`/admin/unlist-product?_id=${id}&status=${status}`).then(res=>{
            if (res.ok) {
                toaster(1,"Product status has been changed successfully")
                let text=document.getElementById(`statusB${id}`)
                if (text.innerText=== "Active") {

                    text.classList.remove("pd-setting")
                    text.classList.add("ds-setting")
                    text.innerText ="Disabled"

                    
                }else{
                    text.classList.add("pd-setting")
                    text.classList.remove("ds-setting")
                    text.innerText ="Active"
                }
            }else{
                toaster(2,"Product status has sum problems")

            }
        })

    }
</script>
