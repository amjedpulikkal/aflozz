            <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>

            <script>

                function cancel(id) {

                    fetch('/order/cancel/' + id)
                        .then(res => {
                            if (!res.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return res.json();
                        })
                        .then(data => {
                            localStorage.setItem("toaster", JSON.stringify({ icon: 1, message: "order has been cancel successfully" }))
                            window.location.reload()
                            console.log(data);
                        })
                        .catch(error => {
                            console.error('Fetch error:', error);
                        });

                }

                document.getElementById("stockAdjustment").addEventListener("change", () => {

                    let value = document.getElementById("stockAdjustment").value

                    let alertMessage = '';
                    if (value === 'increment') {
                        alertMessage = 'Increase stock';
                    } else if (value === 'decrement') {
                        alertMessage = 'Decrease stock';
                    }
                    Swal.fire({
                        title: 'Stock Adjustment',
                        text: alertMessage,
                        icon: 'info',
                        showCancelButton: true,
                        confirmButtonText: 'Apply',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {

                            fetch("/admin/return/stock", { method: "post", body: new URLSearchParams({ value, orderId: '<%=data._id%>', }) }).then((res) => {
                                localStorage.setItem("toaster", JSON.stringify({ icon: 1, message: "Stock has been adjusted successfully" }))
                                res.ok ? window.location.reload(): ""
                            })
                        } else {
                            // User clicked cancel or closed the popup
                            console.log('Stock adjustment canceled');
                        }
                    });




                })
            </script>
