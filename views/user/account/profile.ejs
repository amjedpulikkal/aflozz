      const subscription = await registration.pushManager.subscribe({
        userVisibleOnly: true,
        applicationServerKey: "BECJByIfs2oV2rDl72EmZAgU3wQq4HZQXslwFbrivDTblWuHZyW2r5R5mXKEop-auHg46mQS_1O134ZvfOH4yTY"
      })

