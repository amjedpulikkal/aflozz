    async function START() {
      const registration = await navigator.serviceWorker.register('/service-worker.js', { scope: "/" })
      let subscribe = await registration.pushManager.getSubscription()
      if (subscribe) {
        fetch("/checkSubscribe", { method: "POST", headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(subscribe) }).then(async res => {
          if (res.ok) {
            let data = await res.json()
            console.log(data)
            if (data?.type === "all") {

              document.body.querySelectorAll('input[name="pushNotifications"]')[0].checked = true
            } else {
              document.body.querySelectorAll('input[name="pushNotifications"]')[1].checked = true

            }

          }
        })
      } else {
        document.body.querySelectorAll('input[name="pushNotifications"]')[2].checked = true
      }
    }
    START()
    async function subscribe() {
      let checked = document.body.querySelector('input[name="pushNotifications"]:checked')?.value || null

      if (checked === "no") {
        const registration = await navigator.serviceWorker.register('/service-worker.js', { scope: "/" })
        let subscribe = await registration.pushManager.getSubscription()
        if (subscribe) {
          await subscribe.unsubscribe();
          fetch("/unsubscribe", { method: "POST", headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(subscribe) }).then(async res => {

            toaster(1, "Unsubscribed successfully")
          })
        } else {
